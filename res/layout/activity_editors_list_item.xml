<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="69.0dip"
    android:orientation="horizontal" >

    <ImageView
        android:id="@id/theme_editor_image"
        android:layout_width="@dimen/editor_avatar_width"
        android:layout_height="@dimen/editor_avatar_width"
        android:layout_centerVertical="true"
        android:src="@drawable/editor_profile_avatar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="9.0dip"
        android:layout_toRightOf="@id/theme_editor_image"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@id/theme_editor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_editor_name_light"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@id/theme_editor_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11.0dip"
            android:maxLines="1"
            android:textColor="@color/theme_editor_bio_light"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>
<!-- android:textColor="?themeEditorBio" -->
</RelativeLayout>